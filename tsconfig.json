{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./client/src/*"],
      "~/*": ["./client/src/*"],
      "db": ["./db"],
      "db/*": ["./db/*"]
    },
    "resolveJsonModule": true,
    "outDir": "dist"
  },
  "include": ["client/src", "server", "db"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
