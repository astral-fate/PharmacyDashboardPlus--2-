{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "module": "NodeNext",
    "target": "ES2020",
    "moduleResolution": "NodeNext",
    "allowImportingTsExtensions": false,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "db": ["./db"],
      "db/*": ["./db/*"]
    }
  },
  "include": ["server/**/*", "db/**/*"],
  "exclude": ["node_modules", "client", "dist"]
}
